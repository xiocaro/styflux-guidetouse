/**
* Button Section
* @class Button
* @module base.css
*/
.btn
	background #60c8d1
	border none
	border-radius 4px
	color #fff
	font 700 14px/20px family3
	padding 7px 20px
	&:hover
		background #82d9e1

/**
* Button Section
* @class Button
* @module base.css
*/
.btn-urb
	background #ff9b2e
	background unquote("url(data:image/svg+xml;base64,)")
	background -moz-linear-gradient(top, #ff9b2e 5%, #eb7617 90%, #eb7617 100%)
	background -webkit-gradient(linear, left top, left bottom, color-stop(5%,#ff9b2e), color-stop(90%,#eb7617), color-stop(100%,#eb7617))
	background -webkit-linear-gradient(top, #ff9b2e 5%,#eb7617 90%,#eb7617 100%)
	background -o-linear-gradient(top, #ff9b2e 5%,#eb7617 90%,#eb7617 100%)
	background -ms-linear-gradient(top, #ff9b2e 5%,#eb7617 90%,#eb7617 100%)
	background linear-gradient(to bottom, #ff9b2e 5%,#eb7617 90%,#eb7617 100%)
	border none
	box-shadow 1px 2px 2px rgba(0, 0, 0, 0.2)
	color #FFF
	border-radius 4px
	display inline-block
	*display inline
	font 700 14px/16px family3
	padding 4px 20px
	text-shadow 1px 2px 0 rgba(0, 0, 0, 0.25)
	vertical-align top
	*zoom 1
	&:hover
		background #eb7617
		background unquote("url(data:image/svg+xml;base64,)")
		background -moz-linear-gradient(top,  #eb7617 5%, #ff9b2e 90%, #ff9b2e 100%)
		background -webkit-gradient(linear, left top, left bottom, color-stop(5%,#eb7617), color-stop(90%,#ff9b2e), color-stop(100%,#ff9b2e))
		background -webkit-linear-gradient(top,  #eb7617 5%,#ff9b2e 90%,#ff9b2e 100%)
		background -o-linear-gradient(top,  #eb7617 5%,#ff9b2e 90%,#ff9b2e 100%)
		background -ms-linear-gradient(top,  #eb7617 5%,#ff9b2e 90%,#ff9b2e 100%)
		background linear-gradient(to bottom,  #eb7617 5%,#ff9b2e 90%,#ff9b2e 100%)
		text-decoration none
	& + .btn-gray
		margin-left 10px
	&.disabled
		background #666
		color #999
		cursor default
		&:hover
			background #666
			color #999
.btn-gray
	*display inline
	*zoom 1
	background #686868
	border none
	border-radius 4px
	box-shadow 1px 2px 2px rgba(0, 0, 0, 0.2)
	color #fff
	display inline-block
	font 700 14px/16px family3
	padding 4px 20px
	text-shadow 1px 2px 0 rgba(0, 0, 0, 0.25)
	vertical-align top
	&:hover
		background-color #8c8b8b
		text-decoration none
	& + .btn-urb
		margin-left 20px
	&.disable
		background-color #8c8b8b
		color #646464
		cursor default
		text-decoration none
		text-shadow none
